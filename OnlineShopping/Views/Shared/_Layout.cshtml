<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="~/Scripts/LatestJquery/jquery-3.7.1.min.js"></script>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

        .nav-left {
            margin-top: 10px;
            float: left;
        }

        .nav-right {
            margin-top: 10px;
            float: right;
        }


        footer {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["IsAdmin"] != null && (bool)Session["IsAdmin"])
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Products", "ListAllProducts", "Home")</li>
                        <li>@Html.ActionLink("Customers", "ListAllCustomers", "Home")</li>
                    }
                    else if (Session["Username"] != null)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Store")</li>
                        <li>@Html.ActionLink("Create Order", "ViewProducts", "Store")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Store")</li>
                    }
                </ul>
                <ul class="nav-right">
                    @if (Session["Username"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Sign Up", "SignUp", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - OnlineShopping</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
