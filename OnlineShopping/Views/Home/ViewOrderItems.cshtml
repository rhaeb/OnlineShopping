@{
    ViewBag.Title = "ViewOrderItems";
}

<h2>Order Items for Order ID: @ViewBag.OrderID</h2>

@if (ViewBag.OrderItems != null && ViewBag.OrderItems.Count > 0)
{
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.OrderItems)
            {
                <tr>
                    <td>@item.ProductID</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Category</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.Subtotal</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-warning">No items found for this order.</p>
}

<div>
    <a href="@Url.Action("ListAllOrders", "Order")" class="btn btn-primary">Back to List</a>
    <button type="button" class="btn btn-danger" onclick="deleteOrder(@ViewBag.OrderID)">Delete Order</button>
</div>

<script type="text/javascript">
    function deleteOrder(orderId) {
        if (confirm('Are you sure you want to delete this order?')) {
            window.location.href = '@Url.Action("DeleteOrder", "Home")/' + orderId;
        }
    }
</script>
