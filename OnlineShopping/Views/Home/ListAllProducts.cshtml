@using System.Web;
@using System.Web.Mvc;
@using System.Data;
@using System.Data.SqlClient;
@using System.IO;
@using System.Drawing;
@using System.Drawing.Imaging;
@using System.Web.Services;
@{
    ViewBag.Title = "ListAllProducts";
}
<style>
    .add-product-btn {
        display: inline-block;
        padding: 8px 16px;
        font-size: 16px;
        text-decoration: none;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    .add-product-btn:hover {
        background-color: #45a049;
    }
</style>
<h2>ListAllProducts</h2>
@{
    string connStr = @"Data Source=(LocalDB)\MSSQLLocalDB;AttachDbFilename=C:\Users\admin\source\repos\OnlineShopping\OnlineShopping\App_Data\OnlineShopping.mdf;Integrated Security=True";
    using (var db = new SqlConnection(connStr))
    {
        db.Open();
        using (var cmd = db.CreateCommand())
        {
            cmd.CommandType = CommandType.Text;
            cmd.CommandText = "SELECT * FROM PRODUCT";
            using (var reader = cmd.ExecuteReader())
            {
                if (reader.HasRows)
                {


                    <table border="1" id="datatable">
                        <thead>
                            <tr class="success">
                                <th width="15%">
                                    PRODUCT ID
                                </th>
                                <th width="15%">
                                    NAME
                                </th>
                                <th width="15%">
                                    DESCRIPTION
                                </th>
                                <th width="15%">
                                    CATEGORY
                                </th>
                                <th width="15%">
                                    PRICE
                                </th>
                                <th width="15%">
                                    QUANTITY
                                </th>
                                <th width="15%">
                                    IMAGE
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @while (reader.Read())
                            {
                                <tr class="items">
                                    <td class="id">
                                        @reader["ID"]
                                    </td>
                                    <td class="name">
                                        @reader["NAME"]
                                    </td>
                                    <td class="description">
                                        @reader["DESCRIPTION"]
                                    </td>
                                    <td class="category">
                                        @reader["CATEGORY"]
                                    </td>
                                    <td class="price">
                                        @reader["PRICE"]
                                    </td>
                                    <td class="quantity">
                                        @reader["QUANTITY"]
                                    </td>
                                    <td class="image">
                                        <center>
                                            <img src="../Home/Image?filename=@HttpUtility.UrlEncode(reader["IMAGE"] + "")" width="100%" /><br />
                                        </center>
                                    </td>
                                    <td class="btns">
                                        @Html.ActionLink("Edit", "EditProduct", new { id = @reader["ID"] }, new { @class = "btn btn-primary" })
                                        @Html.ActionLink("Delete", "DeleteProduct", new { id = @reader["ID"] }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this customer?');" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                @Html.ActionLink("Add Product", "ProductEntryForm", null, new { @class = "btn btn-success add-product-btn" })
            }
        }
    }
}

<script src="~/Scripts/LatestJquery/jquery-3.7.1.min.js"></script>