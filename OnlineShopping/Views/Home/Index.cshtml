@{
    ViewBag.Title = "Home Page";
}

<div class="bg-dark text-white py-5">
    <div class="container">
        <h1 class="fw-bold">Admin Dashboard</h1>
        <p class="lead">Welcome to the Admin Panel</p>
    </div>
</div>

<div class="container mt-5">
    <div class="row g-4">
        <div class="col-lg-6 col-md-12">
            <div class="card bg-light text-dark h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h3 class="card-title">Products</h3>
                    <p class="card-text text-center">Manage all products in the store</p>
                </div>
                <div class="card-footer text-center">
                    @Html.ActionLink("View Products", "ListAllProducts", "Home", new { @class = "btn btn-dark" })
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <div class="card bg-light text-dark h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h3 class="card-title">Customers</h3>
                    <p class="card-text text-center">View and manage customer information</p>
                </div>
                <div class="card-footer text-center">
                    @Html.ActionLink("View Customers", "ListAllCustomers", "Home", new { @class = "btn btn-dark" })
                </div>
            </div>
        </div>
    </div>
</div>